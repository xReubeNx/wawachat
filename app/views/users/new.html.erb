<div class="flex flex-col items-center">
  <div class="text-2xl">Create account</div>

  <%= form_with url: "/signup", html: {class: "flex flex-col w-full items-center my-16"}, method: :post do |form| %>
    <%= form.label "username" %>
    <%= form.text_field :username %>

    <%= form.label "display_name" %>
    <%= form.text_field :display_name %>

    <%= form.label "password" %>
    <%= form.password_field :password %>

    <%= form.label "confirm password" %>
    <%= form.password_field :password_confirmation %>

    <div class="bg-white border border-black m-2 p-2">
      <%= form.submit "Create account" %>
    </div>
  <% end %>

  <span>Already have an account? <a href="/login" class="underline">Log in</a></span>
</div>